<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.singpeng.dao.PermissionDao">

    <select id="findByRoleId" resultType="com.singpeng.pojo.Permission" parameterType="int">
        select p.*
        from t_permission p ,t_role_permission rp
        where p.id = rp.permission_id and rp.role_id = #{roleId}
    </select>
</mapper>